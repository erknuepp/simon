<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonGame.MainPage">

    <StackLayout HorizontalOptions="Center">
        
        <Frame BackgroundColor="black" Padding="24">
            <Label 
                FontSize="36"
                HorizontalTextAlignment="Center" 
                Text="SIMON" 
                TextColor="White" 
            />
        </Frame>
        
        <Button 
            x:Name="playButton"
            BackgroundColor="LightGreen" 
            Clicked="PlayButtonClicked"
            CornerRadius="15"
            Margin="200,0,200,20"
            Text="Play" 
        />
        
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="250"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="250"></RowDefinition>
                <RowDefinition Height="250"></RowDefinition>
            </Grid.RowDefinitions>

            <Button 
                BackgroundColor="LightGreen" 
                CornerRadius="50"
                Grid.Column="0" 
                Grid.Row="0"
                Margin="10"
                Text="Green"
            />
            
            <Button 
                x:Name="greenButton" 
                BackgroundColor="Green" 
                Clicked="GreenButtonClicked"
                CornerRadius="50"
                Grid.Column="0" 
                Grid.Row="0"
                Margin="20"
                Text="Green"
            />

            <Button 
                BackgroundColor="LightSalmon" 
                CornerRadius="50"
                Grid.Row="0"
                Grid.Column="1"
                Margin="10"
                Text="Red"
            />

            <Button 
                x:Name="redButton" 
                BackgroundColor="Red" 
                Clicked="RedButtonClicked"
                CornerRadius="50"
                Grid.Row="0"
                Grid.Column="1"
                Margin="20"
                Text="Red"
            />

            <Button 
                BackgroundColor="LightYellow" 
                CornerRadius="50"
                Grid.Row="1" 
                Grid.Column="0"
                Margin="10"
                Text="Yellow"
            />
            
            <Button 
                x:Name="yellowButton" 
                BackgroundColor="Yellow" 
                Clicked="YellowButtonClicked"
                CornerRadius="50"
                Grid.Row="1" 
                Grid.Column="0"
                Margin="20"
                Text="Yellow"
            />

            <Button 
                BackgroundColor="LightBlue" 
                CornerRadius="50"
                Grid.Row="1" 
                Grid.Column="1"
                Margin="10"
                Text="Blue"
            />
            
            <Button 
                x:Name="blueButton" 
                BackgroundColor="Blue" 
                Clicked="BlueButtonClicked"
                CornerRadius="50"
                Grid.Row="1" 
                Grid.Column="1"
                Margin="20"
                Text="Blue"
            />
            
        </Grid>
        <Label 
            x:Name="roundNumberLabel" 
            FontSize="36"
            HorizontalTextAlignment="Center" 
            Text="Round 1"
            TextColor="White" 
        />
    </StackLayout>

</ContentPage>